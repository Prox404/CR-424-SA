<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center"
    android:background="@color/background_primary"
    tools:context=".ScannerActivity">

    <!--    <TextView-->
    <!--        android:id="@+id/textViewResult"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="Scan result will appear here"-->
    <!--        android:textSize="18sp" />-->


    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/zxingScannerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:borderColor="@color/black"
        app:borderWidth="4dp"
        app:borderLength="24dp"
        app:cornerRadius="10dp"
        app:laserColor="#FFF"
        app:maskColor="@color/background_primary"
        app:roundedCorner="true" >

    </me.dm7.barcodescanner.zxing.ZXingScannerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place the QR code inside the area"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Scanning will start automatically"
            android:textColor="#a8a8b2" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        android:background="@drawable/circle"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_flash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/flash" />
    </FrameLayout>

</FrameLayout>